<%= form_tag(search_problems_path,method: 'get', class: "form-horizontal") do %>
<div class="form-group">
      <div class="col-sm-10">
	
    <%= select_tag(:keywords, options_for_select(get_keywords), { style: "width: 100%;", pre_value: "#{@keywords}"}) %>
      </div>
</div>
<div class="form-group">
      <div class="col-sm-10">
	<%= text_field_tag(:user, @user, {placeholder: "Skip problems solved by the user", class: "form-control"}) %>
      </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%=button_tag(:Search, {class: "btn btn-success col-md-offset-2 col-md-2", id: "search"})  %>
  </div>
    <% end %>
    

<script>
    $(document).ready(function() {
	$("#keywords").select2({
	    matcher: search,
	    placeholder: "Keywords",
	    allowClear: true,
	    theme: "bootstrap"
	});
	var v = $('#keywords').attr('pre_value');
	if(v != ""){
	    $('#keywords').select2('val',v);
	}
    });
</script>
