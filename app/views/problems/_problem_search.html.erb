<%= form_tag(search_problems_path,method: 'post', class: "form-horizontal") do %>
<div class="form-group">
      <div class="col-sm-10">
	
	<%= select_tag(:keywords, options_for_select(get_keywords,@keywords), { prompt: "Keywords", class: "form-control"}) %>
      </div>
</div>
<div class="form-group">
      <div class="col-sm-10">
	<%= text_field_tag(:user, @user, {placeholder: "Skip problems solved by the user", class: "form-control"}) %>
      </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%=button_tag(:Search, {class: "btn btn-success col-md-offset-2 col-md-2", id: "search"})  %>
  </div>
<% end %>
